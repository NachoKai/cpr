{% extends 'management/view/layout/base.njk' %} {% block body %}
  <h1 class="title is-1">Brand Managment</h1>

  {% for error in errors %}
  <div class="notification is-danger">
    {{error}}
  </div>
  {% endfor %}

  {% for message in messages %}
  <div class="notification is-success">
    {{message}}
  </div>
  {% endfor %}

  <nav class="navbar">
    <div class="navbar-menu">
      <div class="navbar-start">
        <div class="navbar-item">
          {% include "./layout/search-form.njk" %}
        </div>
      </div>
      <div class="navbar-end">
        <div class="navbar-item">
          <a href="/admin/brand/create" class="button is-primary is-medium is-light">
            <span class="icon">
              <i class="fas fa-plus"></i>
            </span>
            <span>Add new Brand</span>
          </a>
        </div>
      </div>
    </div>
  </nav>

  {% if (brands | length) > 0 %}
    <div class="panel-block">
      {% include "./layout/table.njk" %}
    </div>
    {% if pageData %}
      <section class="section">
        {% include "./layout/pagination.njk" %}
      </section>
    {% endif %}
  {% else %}
    <div class="panel-block">
      <p class="subtitle is-5">Oops it seems that you do not have any brand created. <a href="/admin/brand/create">Create one</a></p>
    </div>
  {% endif %}
{% endblock %}
{% block footerScripts %}
  <script>
    const inputSearch = document.querySelector('input[name=search]');
    const buttonSearch = document.getElementById('search-button');
    const brands = {{ brands | dump | safe }};
      
    if(!(brands.length > 0)) {
      inputSearch.setAttribute("disabled", true);
      buttonSearch.setAttribute("disabled", true);
    }
  </script>
{% endblock %}
