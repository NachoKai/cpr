<table class="table is-striped is-narrow is-hoverable is-fullwidth">
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Default Price</th>
      <th>Image</th>
      <th>Description</th>
      <th>Brand</th>
      <th>Categories</th>
      <th>Discounts</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    {% for product in productsList %}
    <tr id="product-{{ product.id }}">
      <td>{{ product.id }}</td>
      <td>{{ product.name }}</td>
      <td>${{ product.defaultPrice }}</td>
      <td>
        <figure class="image is-128x128">
          <img src="data:image/png;base64, {{ product.imageSrc }}" alt="Product Logo" />
        </figure>
      </td>
      <td>{{ product.description }}</td>
      <td>{{ product.brand.name }}</td>
      <td>{% for category in product.categories %} {{ category.name }} {% endfor %}</td>
      <td>
        {% for discount in product.discounts %} {{ discount.value + '%' if discount.type ===
        'Percentage' else '$' + discount.value}} {% endfor %}
      </td>
      <td>
        <a href="/admin/product/edit/{{ product.id }}" class="button is-info is-fullwidth is-light">
          Edit
        </a>
      </td>
      <td>
        <a
          href="/admin/product/delete/{{ product.id }}"
          class="button is-danger is-fullwidth is-light"
        >
          Delete
        </a>
      </td>
    </tr>
    {% endfor %}
  </tbody>
</table>
