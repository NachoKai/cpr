<table class="table is-striped is-narrow is-hoverable is-fullwidth">
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Discounts</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    {% for category in categoriesList %}
    <tr id="category-{{ category.id }}">
      <td>{{ category.id }}</td>
      <td>{{ category.name }}</td>
      <td>
        {% for discount in category.discounts %} {{ discount.value + '%' if discount.type ===
        'Percentage' else '$' + discount.value}} {% endfor %}
      </td>
      <td>
        <a
          href="/admin/category/edit/{{ category.id }}"
          class="button is-info is-fullwidth is-light"
        >
          Edit
        </a>
      </td>
      <td>
        <a
          href="/admin/category/delete/{{ category.id }}"
          class="button is-danger is-fullwidth is-light"
        >
          Delete
        </a>
      </td>
    </tr>
    {% endfor %}
  </tbody>
</table>
