{% extends 'management/view/layout/base.njk' %} {% block body %}
  <h1 class="title is-1">Category Managment</h1>

  {% for error in errors %}
  <div class="notification is-danger">
    {{error}}
  </div>
  {% endfor %}

  {% for message in messages %}
  <div class="notification is-success">
    {{message}}
  </div>
  {% endfor %}
  <nav class="navbar">
    <div class="navbar-menu">
      <div class="navbar-start">
        <div class="navbar-item">
          <div class="field has-addons">
            <div class="control">
              <input class="input" type="text" name="search" placeholder="Find a category">
            </div>
            <div class="control">
              <a class="button is-info is-outlined">
                Search
              </a>
            </div>
          </div>
        </div>
      </div>
      <div class="navbar-end">
        <div class="navbar-item">
          <a href="/admin/category/create" class="button is-primary is-medium is-light">
            <span class="icon">
              <i class="fas fa-plus"></i>
            </span>
            <span>Add new Category</span>
          </a>
        </div>
      </div>
    </div>
  </nav>

  <div class="panel-block">
    <table class="table is-striped is-narrow is-hoverable is-fullwidth">
      <thead>
        <tr>
          <th>Id</th>
          <th>Name</th>
          <th>Discounts</th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        {% for category in categoriesList %}
        <tr id="category-{{ category.id }}">
          <td>{{ category.id }}</td>
          <td>{{ category.name }}</td>
          <td>
            {% for discount in category.discounts %}
              {{ discount.value + '%' if discount.type === 'Percentage' else '$' + discount.value}}
            {% endfor %}
          </td>
          <td>
            <a href="/admin/category/edit/{{ category.id }}" class="button is-info is-fullwidth is-light">
              Edit
            </a>
          </td>
          <td>
            <a href="/admin/category/delete/{{ category.id }}" class="button is-danger is-fullwidth is-light">
              Delete
            </a>
          </td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}
{% block footerScripts %}
  <script>
    const inputName = document.querySelector('input[name=search]');

    inputName.addEventListener('input', checkName);

    function checkName(event) {
      const searchValue = event.target.value.toLowerCase();
      const categories = {{ categoriesList | dump | safe }};
      categories.forEach((category) => {
        const name = category.name.toLowerCase();
        const categoryTr = document.getElementById(`category-${category.id}`);
        if (name.indexOf(searchValue) > -1) {
          categoryTr.classList.remove('is-hidden');
        } else {
          categoryTr.classList.add('is-hidden');
        }
      });
    }
  </script>
{% endblock %}
