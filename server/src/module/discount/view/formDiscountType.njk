{% extends 'management/view/layout/base.njk' %} {% block body %} {% set type = data.type %}

<div class="level-left">
  <div class="level-item">
    <h1 class="title is-1">
      {{"Editing Discount Type with ID: " + type.id if type.id else "New Type"}}
    </h1>
  </div>
  <div class="level-item">
    <span>
      <a class="button is-link" href="/admin/discount">Cancel</a>
    </span>
  </div>
</div>

<hr />

<form action="/admin/discount/type/save" method="POST" >
  <input type="hidden" name="id" value="{{ type.id }}" readonly />

  <div class="field">
    <label class="label">Type</label>
    <div class="control has-icons-left">
      <input
        class="input"
        type="text"
        name="type"
        placeholder="2 X 1"
        value="{{ type.type }}"
        required
      />
      <span class="icon is-small is-left">
        <i class="fas fa-user"></i>
      </span>
    </div>
  </div>

  <input type="submit" class="button is-primary is-large" value="Save" />

  <hr />
</form>
{% endblock %}
